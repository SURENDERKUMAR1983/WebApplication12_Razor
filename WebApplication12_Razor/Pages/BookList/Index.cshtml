@page
@model WebApplication12_Razor.Pages.BookList.IndexModel


<div class="container row border">
    <div class="col-9">
        <h2 class="text-primary text-left">BookList</h2>
    </div>
    <div class="col-3">
        @*@<a asp-page="Create" class="btn btn-info">*@
            <a asp-page="Upsert" class="btn btn-info">
                Create New Book
            </a>
    </div>
    @if (Model.Books.Count() > 0)
    {
        <div class="container rounded border p-2 m-2">
            <table class="table table-bordered table-striped table-active">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>ISBN</th>                        
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>

                    <form method="post">

                        @foreach (var item in Model.Books)
                        {
                           <tr>
                            <td>@item.Title</td>
                            <td>@item.Author</td>
                            <td>@item.ISBN</td>
                            <td>
                                @*@<a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success form-control">Edit</a>*@
                                <a asp-page="Upsert" asp-route-id="@item.Id" class="btn btn-success form-control">Edit</a>

                                @*<a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-info form-control">Delete</a>*@
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white form-control" onclick="return confirm('want to delete data?')">Delete</button>
                            </td>

                           </tr>
                         }
                    </form>
               </tbody>

            </table>
        </div>

    }
    else
            {
                <p class="text-danger">No Book Found</p>
            }
</div>
<br />
<br />
<h2 class="text-success text-center">OR</h2>
<div class="row-rounded border">
    <table id="tbldata"class="table table-striped table-bordered table-active">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>    
    
</div>
@section scripts 
{
    <script src="~/js/Book.js"></script>
}
